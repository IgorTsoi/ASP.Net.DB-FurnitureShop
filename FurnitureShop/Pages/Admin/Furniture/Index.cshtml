@page
@model FurnitureShop.Pages.Admin.Furniture.IndexModel
@{
    ViewData["Title"] = "ADMIN";
}

<h1>Таблица мебели</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Артикул</th>
            <th scope="col">Имя</th>
            <th scope="col">Цена</th>
            <th scope="col">Скидка</th>
            <th scope="col">Количество</th>
            <th scope="col">Категория</th>
            <th scope="col">Производитель</th>
            <th scope="col">Коллекция</th>
            <th scope="col">Рейтинг</th>
            <th>Изменить</th>
            @*<th>Удалить</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Furniture)
        {
            <tr>
                <th scope="row">@item.VendorCode</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@(item.IsOnSale ? "✓" : "-")</td>
                <td>@item.Quantity</td>
                <td>@item.Category.Name</td>
                <td>@item.Manufacturer.Name</td>
                <td>@item.Collection.Name</td>
                <td>@item.Rate</td>
                <td>
                    <a asp-page="Update" asp-route-vendor="@item.VendorCode" class="btn btn-info" style="width: 100%;border-bottom-left-radius: 0;border-bottom-right-radius: 0;">
                        изм.
                    </a>
                    <form method="post" asp-page="Index" asp-page-handler="Delete">
                        <input type="hidden" name="vendor" value="@item.VendorCode" />
                        <input type="submit" value="удал." class="btn btn-primary" style="width: 100%;border-top-left-radius: 0;border-top-right-radius: 0;"/>
                    </form>
                </td>
                @*<td>
                    <form method="post" asp-page="Index" asp-page-handler="Delete">
                        <input type="hidden" name="vendor" value="@item.VendorCode" />
                        <input type="submit" value="удал." class="btn btn-primary" />
                    </form>
                </td>*@
            </tr>
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-outline-primary" style="width:100%;">Создать</a>

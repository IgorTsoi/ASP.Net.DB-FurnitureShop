@page
@model FurnitureShop.Pages.Admin.Material.IndexModel
@{
    ViewData["Title"] = "ADMIN";
}

<h1>Материалы</h1>
<hr />

@{
    if (Model.Message != null)
    {
        <p style="color:@(Model.IsWarningMessage ? "red" : "green");"> @Model.Message </p>
        <hr />
    }
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Текстура</th>
            <th>Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Materials)
        {
            <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Name</td>
                <td>
                    <img src="@item.Image" style="width: 50px;object-fit: cover;border-radius: .25rem;background-color: white;"  />
                </td>
                <td>
                    <form method="post" asp-page="Index" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@item.ID" />
                        <input type="submit" value="Удалить" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="Create" class="btn btn-outline-primary" style="width:100%;">Создать</a>



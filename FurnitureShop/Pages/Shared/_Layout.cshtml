<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FurnitureShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/custom.css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">FurnitureShop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Furniture" asp-page-handler="All" style="color: #0083f5;animation: glow 1s ease-in-out infinite alternate;">Смотреть всё!</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index" asp-fragment="manufacturers">Производители</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index" asp-fragment="collections">Коллекции</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index" asp-fragment="categories">Категории</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index" asp-fragment="search">Поиск</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.HasClaim("IsAdmin", ""))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Admin/Index">Админ-панель</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/ShoppingCart">Корзина</a>
                            </li>
                            <li class="nav-item">
                                <form method="post">
                                    <input type="submit" asp-page="/Account/Login" asp-page-handler="Logout" value="Выйти" class="nav-link text-info" style="border: none; background: none;" />
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-page="/Account/Login">Войти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" asp-page="/Account/Register">Зарегистрироваться</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align: center;">
            &copy; 2019 - FurnitureShop
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
